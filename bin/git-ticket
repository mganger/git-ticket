#!/usr/bin/python2

import traceback
import sys
args = sys.argv[1:]
exit = sys.exit
from git import Repo
import os
join = os.path.join

repo = Repo(os.getcwd())

arg   = ''
param = ''
try:
	arg   = args[0]
	param = args[1]
except: pass

def get_ticket(string):
	pass
